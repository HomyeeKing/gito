  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'gito'",
      "cargo": {
        "args": [
          "build",
          "--bin=gito",
          "--package=gito"
        ],
        "filter": {
          "name": "gito",
          "kind": "bin"
        }
      },
      // command you want to debug
      "args": [
        "user",
        "ls"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'gito'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=gito",
          "--package=gito"
        ],
        "filter": {
          "name": "gito",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug integration test 'rust'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--test=rust",
          "--package=gito_core"
        ],
        "filter": {
          "name": "rust",
          "kind": "test"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}